#!/bin/bash

# Start Sunshine (GameStream server) in the background.
if command -v sunshine >/dev/null 2>&1; then
  if ! pgrep -x sunshine >/dev/null 2>&1; then
    sunshine >/config/sunshine.log 2>&1 &
  fi
fi

# Steam will run via XWayland in the Wayland session.
if command -v unshare >/dev/null 2>&1; then
  if ! unshare -Ur true >/dev/null 2>&1; then
    echo "steam-selkies: warning: user namespaces appear unavailable; Steam may exit with 'Steam now requires user namespaces'." >>/config/steam-selkies.log
  fi
  steam-selkies
else
  steam-selkies
fi
